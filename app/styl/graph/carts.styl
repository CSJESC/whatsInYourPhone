.carts
  position     relative
  padding-left 220px

.cart
  float            left
  height           80px
  width            80px
  margin           170px 20px 0
  padding          20px
  background-color white
  color            black

.next
.skip
  position absolute
  top      50px
  cursor   pointer

.next
  left 0  
.skip
  right 0
  
// animate carts
.move-carts-leave 
  transition 0.6s ease-in
  position   relative
  z-index    100

.move-carts-leave.move-carts-leave-active
  transform   rotate(-30deg) translateY(20px)
  opacity     0.8
  margin-left -150px
  
.move-carts-enter 
  transition 0.6s ease-in
  opacity    0
  
.move-carts-enter.move-carts-enter-active
  opacity    1