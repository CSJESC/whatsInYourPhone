.carts
  position     relative
  padding-left 260px
  height       785px
  padding-top  170px

.cart
  position         relative
  left             100px
  float            left
  height           145px
  width            171px
  margin-right     30px
  color            black
  overflow         hidden
  text-overflow    ellipsis
  z-index          10
  &.unshure:after
    content          ' '
    position         absolute
    top              0
    left             0
    width            100%
    height           100%
    background-image url(../img/stripes.png)

  &.red        .cart-plane
    fill red
  &.orange     .cart-plane
    fill orange
  &.yellow     .cart-plane
    fill yellow
  &.lightGreen .cart-plane
    fill light-green
  &.green      .cart-plane
    fill green
  &.unkown     .cart-plane
    fill black
    
  .cart-plane
    fill white
    
  .cart-name
    position    absolute
    top         56px
    left        20px
    right       20px
    text-align  center
    font-size   20px
    line-height 25px
    margin      0
    z-index     10
    
.next
.skip
  
  top      50px
  cursor   pointer

.next,
.skip
  position       absolute
  top            210px
  text-transform uppercase
  font-size      40px
  
.next
  left           60px
  &:before
    content      '\2939'
    margin-right 10px
.skip
  right          10px
  color          dark-grey
  &:before
    content        '\276c \276c'
    margin-right   10px
    letter-spacing -6.9
  
// animate carts
.move-carts-leave 
  transition 0.6s ease-in
  position   relative
  z-index    10

.move-carts-leave.move-carts-leave-active
  transform   rotate(-30deg) translateY(20px)
  opacity     0.8
  margin-left -250px
  
.move-carts-enter 
  transition 0.6s ease-in
  opacity    0
  
.move-carts-enter.move-carts-enter-active
  opacity    1