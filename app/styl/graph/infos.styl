.infos
  position         relative
  background-color light-grey
  height           450px
  padding          20px
  clear            both
  
  &:before
  &:after
    content          ' '
    position         absolute
    top              0
    height           100%
    width            2000px
    background-color light-grey
    z-index          -1
    
  &:before
    left  -2000px
  &:after
    right -2000px
    
  .used-in
    margin   0
    padding  0
    overflow hidden
    
    .part-name
      list-style       none
      float            left
      padding          5px 8px
      margin           0 5px 0 0
      background-color grey
      
  .rating
    margin   0
    padding  0
    position relative
    
    .rating-item
      list-style none
      clear      left
      margin     5px 0
      overflow   hidden
      cursor     pointer
      
      dd
        background-color white
        margin           0
        width            80px
        height           20px
        line-height      20px    
        text-align       center
        color            black
        float            left
        
      dt
        float      left
        width      100px
        margin-right     10px
        text-align right
    
    .popup
      position         absolute
      top              -100px
      left             -50px
      width            250px;
      background-color light-grey
      padding          10px
      z-index          20
      
      .close
        position absolute
        top      5px
        right    5px
        background-color red
        cursor           pointer