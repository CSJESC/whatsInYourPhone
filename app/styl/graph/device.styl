.device
  position         absolute
  bottom           0
  width            200px
  height           300px
  background-color grey
  z-index          10
  
  .device-materials
    padding  0
    margin   0
    position absolute
    bottom   0
    width    100%
    
  .device-material
    list-style none
    text-align center
    padding    4px
    color      black
    font-size  10px
    overflow   hidden
    
// animate materials
.slide-up-enter 
  transition 0.6s ease-in
  height     0
  padding    0 !important
  
.slide-up-enter.slide-up-enter-active
  height     18px
  padding    4px !important