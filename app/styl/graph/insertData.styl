
.inser-data-wrapper
  margin-left  720px
  padding-left 20px
  height       420px
  border-left  1px solid white
  text-align   center
    
  .text
    text-align left
    
  .log-in
    display    block
    margin-top 40px
    cursor     pointer
    
  .popup
    position         absolute
    top              0
    left             20px
    width            700px
    height           450px
    border-top       light-grey solid 30px
    background-color normal-grey
    padding          20px
    text-align       left
    z-index          100
    background-image    url(../img/tree.png)
    background-size     auto 100%
    background-position top center
    background-repeat   no-repeat
    
    &:after
      content       ' '
      position      absolute
      top           195px
      right         -30px
      width         0
      height        0
      border-left   30px solid normal-grey
      border-top    30px solid transparent 
      border-bottom 30px solid transparent
    
    .close
      position  absolute
      top       10px
      right     15px
      font-size 20px
      cursor    pointer
      
    .log-in-link
      display         inline-block
      vertical-align  top
      margin          20px 10px
      width           140px
      text-align      center
      color           white
      text-decoration none
      text-align      center
      height          100px
      padding         10px
      &:hover
        background-color white
        color            black
        transition       0.5s
        .icono-twitter
          color      black
          transition 0.5s
        .github
          fill       black
          transition fill 0.5s
      
    .log-in-icon
      margin  20px auto
      display block
      
    .icono-twitter
      transform scale(1.2)
      color     white
    .github
      height 23px
      fill   white