.carts
  position     relative
  padding-left 260px
  height       785px
  padding-top  170px

.cart
  position         relative
  left             100px
  float            left
  height           145px
  width            171px
  margin-right     30px
  color            black
  overflow         hidden
  text-overflow    ellipsis
  
  &.red        .cart-plane
    fill red
  &.orange     .cart-plane
    fill orange
  &.yellow     .cart-plane
    fill yellow
  &.lightGreen .cart-plane
    fill light-green
  &.green      .cart-plane
    fill green
    
  .cart-name
    position    absolute
    top         56px
    left        20px
    right       20px
    text-align  center
    font-size   20px
    line-height 25px
    margin      0
    z-index     10
    
.next
.skip
  position absolute
  top      50px
  cursor   pointer

.next
  left 0  
.skip
  right 0
  
// animate carts
.move-carts-leave 
  transition 0.6s ease-in
  position   relative
  z-index    100

.move-carts-leave.move-carts-leave-active
  transform   rotate(-30deg) translateY(20px)
  opacity     0.8
  margin-left -250px
  
.move-carts-enter 
  transition 0.6s ease-in
  opacity    0
  
.move-carts-enter.move-carts-enter-active
  opacity    1