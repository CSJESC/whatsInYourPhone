.stop-Light
  pole-length = 90px
  
  position      absolute
  bottom        470px
  margin-bottom pole-length
  width         50px
  height        210px
  padding-top   2px
  border-radius 5px
  background    dark-grey
  cursor        pointer
  z-index       10
  
  &:after
    content          ' '
    position         absolute
    bottom           - pole-length
    left             50%
    margin-left      -6px
    width            12px
    height           pole-length
    background-color dark-grey
    
  .light
    diameter = 35px
    
    display          block
    width            diameter
    height           diameter
    background-color grey
    border-radius    (diameter / 2)
    margin           5px 7px
  
  .popup
    position         absolute
    top              0
    left             15px
    background-color light-grey
    width            200px
    font-size        11px
    padding          10px
    
    .close
      position absolute
      top      5px
      right    5px
      background-color red
