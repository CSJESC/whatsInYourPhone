.carts
  position     relative
  padding-left 260px
  height       785px
  padding-top  170px
  
.carts-list
  height   145px
  display  block
  position relative
  left     -260px
  padding-left 260px
  overflow     hidden

.cart
  position         relative
  left             100px
  float            left
  height           145px
  width            171px
  margin-right     30px
  color            black
  overflow         hidden
  text-overflow    ellipsis
  z-index          10
  &.unshure:after
    content          ' '
    position         absolute
    top              0
    left             0
    width            100%
    height           100%
    background-image url(../img/stripes.png)

  &.red        .cart-plane
    fill red
  &.orange     .cart-plane
    fill orange
  &.yellow     .cart-plane
    fill yellow
  &.lightGreen .cart-plane
    fill light-green
  &.green      .cart-plane
    fill green
  &.unkown     .cart-plane
    fill black
    
  .cart-plane
    fill white
    transition fill 0.5s
    
  .cart-name
    position    absolute
    top         56px
    left        20px
    right       20px
    text-align  center
    font-size   20px
    line-height 25px
    margin      0
    z-index     10
  
.next
.skip-link
  &:hover
    color     orange
    transition color 0.5s
  
  
.next
.skip
  position       absolute
  top            210px
  text-transform uppercase
  font-size      40px
  user-select    none
  z-index        40
  .icono-rewind
  .icono-pause
  .icono-caretLeft
  .icono-previous
  .icono-clock
    color     inherit
    transform scale(-1.5)
    margin    -7px 10px 0 0
  .icono-clock
    margin-right 30px
  
.next
  left     60px
  cursor   pointer
.skip
  right  10px
  color  dark-grey
.skip-link
  cursor       pointer
  margin-right 10px
  
// animate carts
.move-carts-leave 
  transition 0.6s ease-in
  position   relative
  z-index    10

.move-carts-leave.move-carts-leave-active
  transform   rotate(-30deg) translateY(20px)
  opacity     0.8
  margin-left -250px
  
.move-carts-enter 
  transition 0.6s ease-in
  opacity    0
  
.move-carts-enter.move-carts-enter-active
  opacity    1